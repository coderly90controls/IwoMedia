<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/isplay_ms_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#00000000"
    android:orientation="vertical"
    android:visibility="gone" >
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/comm_bg_color"
        android:orientation="vertical" >

        <LinearLayout
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="340dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/dislog_tanchu"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/dislog_tanchu_1"
                android:gravity="center"
                android:text="无权限通过以下方式获取权限"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/isplay_ms_look"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/dislog_tanchu_1"
                android:text="先看广告"
                android:textColor="#268df9"
                 />

            <Button
                android:id="@+id/isplay_ms_share"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/dislog_tanchu_1"
                android:text="分享给十个好友"
                android:textColor="#268df9"
               />

            <Button
                android:id="@+id/isplay_ms_money"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/dislog_tanchu_1"
                android:text="付费点播(一元/次)"
                android:textColor="#268df9"
                android:visibility="gone"
                 />

            <Button
                android:id="@+id/isplay_ms_back"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/dislog_tanchu_1"
                android:text="取消"
                android:textColor="#268df9"
                />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

</LinearLayout>