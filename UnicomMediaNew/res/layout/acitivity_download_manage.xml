<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comm_bg_color"
    android:orientation="vertical" >
    
    <RelativeLayout 
         android:id="@+id/download_title_layout"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
      
       	 android:focusable="true"  
         android:focusableInTouchMode="true"
   >	
     
       <RelativeLayout 
             android:id="@+id/download_title_layout_two"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
        >
           
        <Button
            android:id="@+id/back_title_button"
            android:layout_width="50dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/fanhui"
           />  
       
         
         <TextView 
              android:id="@+id/download_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="我的下载"
              android:textSize="16dp"
              android:layout_centerInParent="true"
              android:textColor="@color/white"
             
            />
           
           
       </RelativeLayout>
           
       
     <LinearLayout 
        android:id="@+id/layout_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/download_title_layout_two"
        android:paddingBottom="6dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        >
         
        <TextView 
            android:id="@+id/loading_button"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:textSize="12dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/me_b_z"
            android:text="正在下载"
           
            />
        
        <TextView 
            android:id="@+id/loadfinsh_button"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:text="下载完成"
            android:gravity="center"
            android:background="@drawable/me_b_w"
			android:textColor="@color/white"
            android:textSize="12dp"
            />
    </LinearLayout>
     
   </RelativeLayout>

             <!-- Fragment容器 -->
      <RelativeLayout 
        android:id="@+id/fragment_container"
        android:layout_below="@+id/download_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
		        
        >
       
     </RelativeLayout>
    
    
</LinearLayout>
