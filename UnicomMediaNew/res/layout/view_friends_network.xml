<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/comm_white_color" >
    <ImageView
        android:id="@+id/frends_network_item_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
         />
    <View
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/frends_network_item_text"
        android:layout_alignBottom="@+id/frends_network_item_text"
        android:layout_toRightOf="@id/frends_network_item_img"
        android:background="@color/comm_bg_color" />
    <View
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/frends_network_item_img"
        android:layout_alignBottom="@+id/frends_network_item_img"
        android:layout_toRightOf="@id/frends_network_item_img"
        android:background="@color/comm_bg_color" />
  <TextView 
      android:id="@+id/frends_network_item_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="15dp"
      style="@style/BigTextStyle"
      android:layout_centerVertical="true"
      android:layout_toRightOf="@id/frends_network_item_img"
      android:text="12"
      />
</RelativeLayout>