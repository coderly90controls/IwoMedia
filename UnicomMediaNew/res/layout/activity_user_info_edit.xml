<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/comm_bg_color"
    android:orientation="vertical" >

    <include layout="@layout/comm_title" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dip"
            android:background="@drawable/bg_white_line"
            android:orientation="vertical"
            android:padding="5dip" >

            <TextView
                style="@style/BigTextStyle"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip"
                android:text="温馨提示：为了使您拥有更好的体验，请完善下列资料后方可继续使用！" />

            <View
                android:id="@+id/line"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@color/comm_color" />

            <ImageView
                android:id="@+id/head"
                android:layout_width="64dip"
                android:layout_height="64dip"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dip"
                android:background="@drawable/shangchuantouxiang" />

            <EditText
                android:id="@+id/nick_name"
                style="@style/EditTextStyle"
                android:layout_marginTop="5dp"
                android:hint="请设置您的昵称"
                android:maxLength="4" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginTop="10dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/BigTextStyle"
                    android:layout_width="70dip"
                    android:text="出生年月："
                    android:textSize="14dp" />

                <RelativeLayout
                    android:id="@+id/address_1_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:layout_marginRight="3dip"
                    android:layout_weight="0.28"
                    android:background="@drawable/bg_rect"
                    android:padding="3dip" >

                    <TextView
                        android:id="@+id/year"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="27dip"
                        android:ellipsize="end"
                        android:hint="年"
                        android:singleLine="true"
                        android:textColor="@color/color_9d9d9d"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/xiala1"
                        android:layout_width="27dip"
                        android:layout_height="27dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/xiala" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/address_2_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:layout_marginRight="3dip"
                    android:layout_weight="0.3"
                    android:background="@drawable/bg_rect"
                    android:padding="3dip" >

                    <TextView
                        android:id="@+id/month"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="27dip"
                        android:ellipsize="end"
                        android:hint="月"
                        android:singleLine="true"
                        android:textColor="@color/color_9d9d9d"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/xiala2"
                        android:layout_width="27dip"
                        android:layout_height="27dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/xiala" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/address_3_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:layout_marginRight="3dip"
                    android:layout_weight="0.3"
                    android:background="@drawable/bg_rect"
                    android:padding="3dip" >

                    <TextView
                        android:id="@+id/day"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="27dip"
                        android:ellipsize="end"
                        android:hint="日"
                        android:singleLine="true"
                        android:textColor="@color/color_9d9d9d"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/xiala3"
                        android:layout_width="27dip"
                        android:layout_height="27dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/xiala" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_marginTop="4dip"
                android:background="@color/comm_bg_color" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/BigTextStyle"
                    android:layout_width="70dip"
                    android:text="性别:"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/boy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:drawableLeft="@drawable/weixuan"
                    android:text="男" />

                <Button
                    android:id="@+id/gird"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:background="#00000000"
                    android:drawableLeft="@drawable/xuanzhong"
                    android:text="女" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/comm_bg_color" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginBottom="3dip"
                android:layout_marginTop="3dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/BigTextStyle"
                    android:layout_width="70dip"
                    android:text="所在地:"
                    android:textSize="14dp" />

                <RelativeLayout
                    android:id="@+id/address_4_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:background="@drawable/bg_rect"
                    android:padding="3dip" >

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="27dip"
                        android:ellipsize="end"
                        android:hint="地区"
                        android:singleLine="true"
                        android:textColor="@color/color_9d9d9d"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/xiala4"
                        android:layout_width="27dip"
                        android:layout_height="27dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/xiala" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/comm_bg_color" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginBottom="3dip"
                android:layout_marginTop="3dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/BigTextStyle"
                    android:layout_width="70dip"
                    android:text="所属行业:"
                    android:textSize="14dp" />

                <RelativeLayout
                    android:id="@+id/address_5_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:layout_marginRight="3dip"
                    android:layout_weight="1"
                    android:background="@drawable/bg_rect"
                    android:padding="3dip" >

                    <TextView
                        android:id="@+id/type1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="27dip"
                        android:ellipsize="end"
                        android:hint="所属行业"
                        android:singleLine="true"
                        android:textColor="@color/color_9d9d9d"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/xiala5"
                        android:layout_width="27dip"
                        android:layout_height="27dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/xiala" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/address_6_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:layout_weight="1"
                    android:background="@drawable/bg_rect"
                    android:padding="3dip" >

                    <TextView
                        android:id="@+id/type2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="27dip"
                        android:ellipsize="end"
                        android:hint="当前职位"
                        android:singleLine="true"
                        android:textColor="@color/color_9d9d9d"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/xiala6"
                        android:layout_width="27dip"
                        android:layout_height="27dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/xiala" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/comm_bg_color" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/BigTextStyle"
                    android:layout_width="70dip"
                    android:text="个性签名:"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/sign"
                    style="@style/EditTextStyle"
                    android:layout_height="80dip"
                    android:gravity="top"
                    android:maxLength="36"
                    android:textColor="@color/color_9d9d9d" />
            </LinearLayout>

            <TextView
                android:id="@+id/ok"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:layout_marginRight="65dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/btn_blue_rect_selector"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="完成"
                android:textColor="#ffffff"
                android:textSize="17sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>