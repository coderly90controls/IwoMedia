<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <com.android.iwo.zxing.view.ViewfinderView
        android:id="@+id/viewfinder_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_cancel_scan"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="75dp"
            android:text="Cancel"
            android:textSize="15sp"
            android:textStyle="bold" />

        <!--
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="@string/scan_prompt_info"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
        -->

    </RelativeLayout>

    <RelativeLayout
        android:layout_gravity="top"
        android:layout_width="fill_parent"
        android:layout_height="44dip"
        android:background="#88000000" >
        <ImageView 
            android:id="@+id/camera_fanhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:src="@drawable/fanhui"
            />
        
        <TextView 
            android:layout_toRightOf="@id/camera_fanhui"
            android:layout_width="fill_parent"
            android:layout_height="44dip"
            android:gravity="center"
            android:textColor="@color/comm_white_color"
            android:text="添加好友扫一扫"
            android:textSize="18dp"
            />
        <View
            android:layout_toRightOf="@id/camera_fanhui"
            android:layout_width="1dp"
            android:layout_height="44dp"
            android:background="#aa000000"
            ></View>
    </RelativeLayout>

</FrameLayout>