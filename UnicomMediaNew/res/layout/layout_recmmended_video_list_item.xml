<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/comm_bg_color"
    android:orientation="vertical"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="7dip" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/comm_bg_color" >

        <ImageView
            android:id="@+id/head"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="3dp"
            android:background="@color/comm_green_color"
            android:maxHeight="60dp"
            android:maxWidth="60dp"
            android:scaleType="fitXY"
            android:src="@drawable/xiaomishubai"
            android:visibility="gone" />

        <TextView
            android:id="@+id/name"
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/head"
            android:layout_alignRight="@+id/head"
            android:layout_below="@id/head"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text="爱握小秘书"
            android:textColor="@color/comm_green_color"
            android:textSize="12dp"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/comm_bg_color" >

        <ImageView
            android:id="@+id/item_img"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:background="@drawable/more_570_352"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/video_title_name"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignBottom="@id/item_img"
            android:background="#55000000"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/synopsis"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#65000000"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="3"
            android:paddingLeft="7dp"
            android:paddingTop="7dp"
            android:text="nifdfdf"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:visibility="visible" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/comm_white_color"
        android:orientation="horizontal"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/comments"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/d_pinglun" />

            <TextView
                android:id="@+id/comments_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#eeffffff"
                android:gravity="center"
                android:text="评论"
                android:textColor="@color/comm_black_color" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/comm_bg_color" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/play"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/d_bofang" />

            <TextView
                android:id="@+id/play_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#eeffffff"
                android:gravity="center"
                android:text="106"
                android:textColor="@color/comm_black_color" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/comm_bg_color" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/d_fenxiang" />

            <TextView
                android:id="@+id/share_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#eeffffff"
                android:gravity="center"
                android:text="106"
                android:textColor="@color/comm_black_color" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/des"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="2"
        android:paddingLeft="5dp"
        android:text="视频标题"
        android:textColor="@color/black"
        android:textSize="13sp" />

</LinearLayout>