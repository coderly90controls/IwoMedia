<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/comm_bg_color"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/alarm_white"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_marginLeft="72.5dip"
        android:background="@drawable/alarm_white" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/ico_default"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/alarm_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/head"
            android:layout_alignTop="@id/head"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/head"
            android:background="@drawable/d_alarm" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="7dp"
            android:gravity="center_vertical"
            android:text="01-17 12"
            android:textColor="@color/comm_green_color" />

        <TextView
            android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@id/time"
            android:layout_toRightOf="@+id/alarm_img"
            android:singleLine="true"
            android:text="as"
            android:textColor="@color/color_3f3f51"
            android:textSize="16dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="57dip"
        android:layout_marginRight="7dp"
        android:layout_toRightOf="@id/head"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/synopsis"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/comm_white_color"
            android:lines="1"
            android:paddingBottom="10dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="10dp"
            android:text="非常美丽的景色"
            android:textColor="@color/comm_black_color"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/item_img"
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            android:background="@drawable/video_zhanwei"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/layout_1"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@color/comm_white_color"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/comments"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/d_pinglun" />

                <TextView
                    android:id="@+id/comments_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#eeffffff"
                    android:gravity="center"
                    android:text="评论"
                    android:textColor="@color/comm_black_color" />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/comm_bg_color" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/play"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/d_bofang" />

                <TextView
                    android:id="@+id/play_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#eeffffff"
                    android:gravity="center"
                    android:text="106"
                    android:textColor="@color/comm_black_color" />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/comm_bg_color" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/d_fenxiang" />

                <TextView
                    android:id="@+id/share_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#eeffffff"
                    android:gravity="center"
                    android:text="106"
                    android:textColor="@color/comm_black_color" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>