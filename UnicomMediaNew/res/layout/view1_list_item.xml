<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="76dip"
    android:orientation="horizontal"
    android:paddingTop="5dip"
    android:paddingLeft="7dip"
    android:paddingRight="7dip" >

    <RelativeLayout
        android:id="@+id/move_layout"
        android:layout_width="match_parent"
        android:layout_height="76dip"
        android:padding="1dip"
        android:background="@drawable/bg_white_line"
        android:clickable="false" >

        <ImageView
            android:id="@+id/img"
            android:layout_width="74dip"
            android:layout_height="74dip"
            android:background="@drawable/ico_default"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@+id/img"
            android:text="蓉儿"
            android:textColor="@color/color_3f3f51"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/img_2"
            android:layout_width="131dip"
            android:layout_height="74dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/video_zhanwei"
            android:scaleType="fitXY"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/del"
        android:layout_width="74dip"
        android:layout_height="74dip"
        android:background="#ff3b2f"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shanchu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dip"
            android:text="删除"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>