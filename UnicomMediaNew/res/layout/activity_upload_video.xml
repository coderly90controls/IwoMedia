<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comm_bg_color"
    android:orientation="vertical" >

    <include layout="@layout/comm_title" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:background="@drawable/bg_box_cccccc_white"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="9dp"
            android:text="标题"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/upload_video_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:background="@drawable/edit_kuang"
            android:hint="请输入···"
            android:lines="1"
            android:maxLength="10"
            android:maxLines="4"
            android:padding="9dp"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="9dp"
            android:text="视频介绍"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/upload_video_introduce"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:background="@drawable/edit_kuang"
            android:gravity="top"
            android:hint="请输入···"
            android:lines="4"
            android:maxLength="150"
            android:maxLines="4"
            android:padding="9dp"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/up_load_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传到:"
                android:textSize="16dp" />

            <LinearLayout
                android:id="@+id/zhuye_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/up_load_text"
                android:gravity="center_vertical"
                android:paddingLeft="7dp" >

                <ImageView
                    android:id="@+id/zhuye_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/xuanzhong_fang" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="我的主页"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/weixuanzhong_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/zhuye_layout"
                android:gravity="center_vertical"
                android:paddingLeft="7dp" >

                <ImageView
                    android:id="@+id/pengyouquan_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/xuanzhong_fang" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="我的朋友圈"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/up_load_text"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/up_load_text"
                android:gravity="center_vertical"
                android:paddingLeft="7dp"
                android:paddingTop="7dp" >

                <ImageView
                    android:id="@+id/event_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:src="@drawable/weixuanzhong_fang" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="7dp"
                    android:text="活动专区"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <RelativeLayout
                    android:id="@+id/address_4_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="25dip"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_rect"
                    android:padding="3dip" >

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="27dip"
                        android:ellipsize="end"
                        android:hint="请选择..."
                        android:singleLine="true"
                        android:textColor="@color/color_9d9d9d"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/xiala4"
                        android:layout_width="21dip"
                        android:layout_height="21dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/xiala" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/ok"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/btn_bg_radiu"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="提交"
        android:textColor="#ffffff"
        android:textSize="17dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="20dp" />

</LinearLayout>