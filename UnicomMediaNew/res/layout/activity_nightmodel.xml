<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/comm_bg_color" >

    <include layout="@layout/comm_title" />

    <com.android.iwo.media.view.XListView
        android:id="@+id/list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/title"
        android:orientation="vertical" />

    <RelativeLayout
        android:id="@+id/select"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#55000000"
        android:clickable="true"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#ffffff"
            android:orientation="vertical"
            android:paddingBottom="15dip"
            android:paddingTop="15dip" >

            <TextView
                style="@style/BigTextStyle"
                android:layout_marginLeft="15dip"
                android:text="性别：" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="5dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/sex1"
                    android:layout_width="fill_parent"
                    android:layout_height="30dip"
                    android:layout_marginRight="10dip"
                    android:layout_weight="1"
                    android:background="@drawable/fangxing"
                    android:gravity="center"
                    android:text="全部"
                    android:textColor="@color/comm_night_color"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/sex2"
                    android:layout_width="fill_parent"
                    android:layout_height="30dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_weight="1"
                    android:background="@drawable/fangxing_"
                    android:gravity="center"
                    android:text="男"
                    android:textColor="#000000"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/sex3"
                    android:layout_width="fill_parent"
                    android:layout_height="30dip"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:background="@drawable/fangxing_"
                    android:gravity="center"
                    android:text="女"
                    android:textColor="#000000"
                    android:textSize="14dp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#d2d2d2" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                android:paddingBottom="5dip"
                android:paddingTop="5dip" >

                <TextView
                    style="@style/BigTextStyle"
                    android:layout_marginLeft="15dip"
                    android:text="年龄：" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_marginTop="5dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/age1"
                        android:layout_width="fill_parent"
                        android:layout_height="30dip"
                        android:layout_marginRight="5dip"
                        android:layout_weight="1"
                        android:background="@drawable/fangxing_"
                        android:gravity="center"
                        android:text="18-22岁"
                        android:textColor="#000000"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/age2"
                        android:layout_width="fill_parent"
                        android:layout_height="30dip"
                        android:layout_marginRight="2.5dip"
                        android:layout_weight="1"
                        android:background="@drawable/fangxing_"
                        android:gravity="center"
                        android:text="23-30岁"
                        android:textColor="#000000"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/age3"
                        android:layout_width="fill_parent"
                        android:layout_height="30dip"
                        android:layout_marginLeft="2.5dip"
                        android:layout_weight="1"
                        android:background="@drawable/fangxing_"
                        android:gravity="center"
                        android:text="31-45岁"
                        android:textColor="#000000"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/age4"
                        android:layout_width="fill_parent"
                        android:layout_height="30dip"
                        android:layout_marginLeft="5dip"
                        android:layout_weight="1"
                        android:background="@drawable/fangxing_"
                        android:gravity="center"
                        android:text="45岁以上"
                        android:textColor="#000000"
                        android:textSize="14dp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#d2d2d2" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#ffffff"
                android:orientation="vertical"
                android:paddingBottom="5dip"
                android:paddingTop="5dip" >

                <TextView
                    style="@style/BigTextStyle"
                    android:layout_marginLeft="15dip"
                    android:text="最近活动时间：" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_marginTop="5dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/time1"
                        android:layout_width="fill_parent"
                        android:layout_height="30dip"
                        android:layout_marginRight="2.55dip"
                        android:layout_weight="1"
                        android:background="@drawable/fangxing"
                        android:gravity="center"
                        android:text="15分钟"
                        android:textColor="@color/comm_night_color"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/time2"
                        android:layout_width="fill_parent"
                        android:layout_height="30dip"
                        android:layout_marginLeft="2.5dip"
                        android:layout_weight="1"
                        android:background="@drawable/fangxing_"
                        android:gravity="center"
                        android:text="3小时"
                        android:textColor="#000000"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/time3"
                        android:layout_width="fill_parent"
                        android:layout_height="30dip"
                        android:layout_marginLeft="5dip"
                        android:layout_weight="1"
                        android:background="@drawable/fangxing_"
                        android:gravity="center"
                        android:text="1天"
                        android:textColor="#000000"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/time4"
                        android:layout_width="fill_parent"
                        android:layout_height="30dip"
                        android:layout_marginLeft="5dip"
                        android:layout_weight="1"
                        android:background="@drawable/fangxing_"
                        android:gravity="center"
                        android:text="5天"
                        android:textColor="#000000"
                        android:textSize="14dp" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#d2d2d2" />
            
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="5dip"
                android:orientation="horizontal">
                <TextView 
                    android:id="@+id/ok"
                    style="@style/PinkBtnRectStyle"
                    android:layout_width="100dip"
                    android:layout_marginRight="5dip"
                    android:padding="7dip"
                    android:text="确定"/>
                
                <TextView 
                    android:id="@+id/cancle_"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:padding="7dip"
                    android:background="#959595"
                    android:text="取消"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:textColor="#ffffff"/>
                
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>