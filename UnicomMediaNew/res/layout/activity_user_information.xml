<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_info"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/comm_bg_color"
    android:orientation="vertical" >

    <include layout="@layout/comm_title" />

    <ScrollView
        android:id="@+id/user_edit_scroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:scrollbars="none"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dip"
            android:layout_marginRight="7dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/bg_white_line"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/info_layout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:background="#eeffffff"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/info_text1"
                        android:layout_width="90dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dip"
                        android:text="账号:"
                        android:textColor="@color/comm_black_color"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/edit_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dip"
                        android:paddingTop="1dp"
                        android:textColor="@color/color_3f3f51"
                        android:textSize="16dp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/comm_bg_color" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/info_text2"
                        android:layout_width="90dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text="昵称:"
                        android:textColor="@color/comm_black_color"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/edit_2"
                        android:layout_width="fill_parent"
                        android:layout_height="30dip"
                        android:layout_margin="10dip"
                        android:paddingLeft="5dip"
                        android:paddingTop="1dp"
                        android:textColor="@color/color_3f3f51"
                        android:textSize="16dp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/comm_bg_color" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/info_text4"
                        android:layout_width="90dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text="性别:"
                        android:textColor="@color/comm_black_color"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/edit_4"
                        android:layout_width="fill_parent"
                        android:layout_height="30dip"
                        android:layout_margin="10dip"
                        android:paddingLeft="5dip"
                        android:paddingTop="1dp"
                        android:textColor="@color/color_3f3f51"
                        android:textSize="16dp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/comm_bg_color" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/info_text7"
                        android:layout_width="90dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text="年龄:"
                        android:textColor="@color/comm_black_color"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/edit_5"
                        android:layout_width="fill_parent"
                        android:layout_height="30dip"
                        android:layout_margin="10dip"
                        android:paddingLeft="5dip"
                        android:paddingTop="1dp"
                        android:textColor="@color/color_3f3f51"
                        android:textSize="16dp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/comm_bg_color" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible" >

                    <TextView
                        android:layout_width="90dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text="所在地:"
                        android:textColor="@color/comm_black_color"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/edit_6"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dip"
                        android:paddingLeft="5dip"
                        android:paddingTop="1dp"
                        android:textColor="@color/color_3f3f51"
                        android:textSize="16dp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/comm_bg_color" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="top|center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/info_text8"
                        android:layout_width="90dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginTop="10dip"
                        android:text="个性签名:"
                        android:textColor="@color/comm_black_color"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/edit_7"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dip"
                        android:gravity="top"
                        android:paddingLeft="5dip"
                        android:paddingTop="1dp"
                        android:textColor="@color/color_3f3f51"
                        android:textSize="16dp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="4dp"
                android:background="@color/comm_bg_color" />

            <LinearLayout
                android:id="@+id/info_layout2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:background="#ffffff"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/info_text9"
                        android:layout_width="90dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text="职业:"
                        android:textColor="@color/comm_black_color"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/edit_8"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dip"
                        android:paddingLeft="5dip"
                        android:paddingTop="1dp"
                        android:textColor="@color/color_3f3f51"
                        android:textSize="16dp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/comm_bg_color" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/info_text10"
                        android:layout_width="90dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text="公司:"
                        android:textColor="@color/comm_black_color"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/edit_9"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dip"
                        android:paddingLeft="5dip"
                        android:paddingTop="1dp"
                        android:textColor="@color/color_3f3f51"
                        android:textSize="16dp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/comm_bg_color" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/info_text11"
                        android:layout_width="90dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text="学校："
                        android:textColor="@color/comm_black_color"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/edit_10"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dip"
                        android:paddingLeft="5dip"
                        android:paddingTop="1dp"
                        android:textColor="@color/color_3f3f51"
                        android:textSize="16dp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/comm_bg_color" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/info_text12"
                        android:layout_width="90dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text="兴趣爱好："
                        android:textColor="@color/comm_black_color"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/edit_11"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dip"
                        android:paddingLeft="5dip"
                        android:paddingTop="1dp"
                        android:textColor="@color/color_3f3f51"
                        android:textSize="16dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>